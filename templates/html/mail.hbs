<html style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; font-size: 100%; line-height: 1.6em; margin: 0; padding: 0;">
    <head>
        <title>ClusterControl Adviser alarm: {{subject}}</title>
        <meta name="viewport" content="width=device-width">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    </head>
    <body style="background-color: #ffffff;">
        <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <td>
                    <table width="500" cellpadding="0" cellspacing="0" border="0" align="center" style="border: 1px solid #444444; border-radius: 6px;">
                        <thead style="background-color: #cccccc;">
                            <tr>
                                <th><a href="{{url}}"><img src="http://52.17.44.14/clustercontrol/img/logo.svg" border="0"></a></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <h4>{{name}}</h4>
                                <div>{{description}}</div>
								{{#if details}}
									<h5>Details</h5>
									<pre>{{stringify details}}</pre>
								{{/if}}
								{{#if contexts}}
									<h5>Contexts</h5>
									<table width="100%" cellpadding="0" cellspacing="4" border="0">
									{{#each contexts}}
										<tr>
											<td>
											{{#ifCond type "link"}}
												<a href="{{href}}">{{text}}</a>
											{{/ifCond}}
											{{#ifCond type "image"}}
												{{#if href}}<a href="{{href}}">{{/if}}<img src="{{src}}" border="0" style="max-width: 100%;">{{#if href}}</a>{{/if}}
											{{/ifCond}}
											</td>
										</tr>
									{{/each}}
									</table>
								{{/if}}
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>