<html style="font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; font-size: 100%; line-height: 1.6em; margin: 0; padding: 0;">
    <head>
        <title>ClusterControl Adviser alarm: {{subject}}</title>
        <meta name="viewport" content="width=device-width">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    </head>
    <body style="background-color: #ffffff;">
        <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <td>
                    <table width="600" cellpadding="10" cellspacing="0" border="0" align="center" style="border: 1px solid #dddddd; border-radius: 4px;">
                        <thead style="background-color: #f5f5f5;">
                            <tr>
                                <th style="border-bottom: 1px solid #dddddd; text-align: left;" align="left"><a href="{{url}}"><img src="http://52.17.44.14/clustercontrol/img/logo.gif" border="0"></a></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="padding-bottom: 0;">
                                    <h3>{{subject}}</h3>
                                    <b>{{name}}</b><br>
                                    <div>{{description}}</div>
    								{{#if details}}
    									<h3>Details</h3>
    									<pre>{{stringify details}}</pre>
    								{{/if}}
                                </td>
                            </tr>
							{{#if contexts}}
                            <tr>
                                <td style="padding: 0">
    								<h3 style="padding-left: 10px;">Contexts</h3>
    								<table width="100%" cellpadding="10" cellspacing="10" border="0">
    								{{#each contexts}}
    									<tr>
    										<td style="border: 1px solid #dddddd;">
    										{{#ifCond type "link"}}
                                                <b>Link:</b><br>
    											<a href="{{href}}">{{#if text}}{{text}}{{else}}link{{/if}}</a>
    										{{/ifCond}}
    										{{#ifCond type "image"}}
                                                <b>Image:</b><br>
    											{{#if href}}<a href="{{href}}">{{/if}}<img src="{{src}}" border="0" style="max-width: 100%;">{{#if href}}</a>{{/if}}
    										{{/ifCond}}
    										</td>
    									</tr>
    								{{/each}}
    								</table>
                                </td>
                            </tr>
							{{/if}}
                        </tbody>
                        <tfoot style="background-color: #f5f5f5;">
                            <tr>
                                <td style="border-top: 1px solid #dddddd; text-align: left;" align="left">Copyright &copy; <a href="http://www.severalnines.com/">Severalnines AB</a> 2015</td>
                            </tr>
                        </tfoot>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>